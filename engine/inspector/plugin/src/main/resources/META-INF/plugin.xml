<idea-plugin>
    <id>pro.piechowski.inspector</id>
    <name>High School Story Inspector</name>
    <vendor email="you@example.com">Filip Piechowski</vendor>
    <description>
        An in-IDE game inspector for LibGDX and Koin/Fleks data.
    </description>

    <!-- Minimum IDE version -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Register components -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="pro.piechowski.highschoolstory.engine.plugin.InspectorSettings"/>
        <toolWindow id="Inspector"
                    anchor="right"
                    factoryClass="pro.piechowski.highschoolstory.engine.plugin.InspectorToolWindowFactory"/>
    </extensions>
</idea-plugin>
